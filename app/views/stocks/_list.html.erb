<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Symbol</th>
      <th>Current Price</th>
      
      <% if @user.id == current_user.id %>  <!-- bcos _list is shared all other form -->
        <th>Actions</th>
      <% end %>
    </tr>
  </thead>
  
  <tbody>
    <% @user_stocks.each do |user_stock| %>
      <tr>
        <td><%= user_stock.name %></td>
        <td><%= user_stock.ticker %></td>
        <td><%= user_stock.price %></td>
        
        <% if @user.id == current_user.id %>
          <td>                            <!-- delete relation, not delete actual stock ; hash rocket -->
          <%= link_to 'Delete',
          user_stock_path(user_stock),        
          :method => :delete,
          :data => { :confirm => 'Are you sure?' },
          :class => 'btn btn-xs btn-danger' %>
          </td>
        <% end %>
        
        
      </tr>
    <% end %>
  </tbody>

</table>
